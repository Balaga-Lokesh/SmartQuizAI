{
  "info": {
    "name": "SmartQuiz AI - Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "smartquizai-collection"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      }
    },
    {
      "name": "Debug: Send Mail",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/debug/send-mail",
          "host": ["{{baseUrl}}"],
          "path": ["debug", "send-mail"]
        }
      }
    },
    {
      "name": "Auth: Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"secret123\",\n  \"role\": \"student\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Auth: Verify Email",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/verify-email",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "verify-email"]
        }
      }
    },
    {
      "name": "Auth: Login (password)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"secret123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Auth: Login Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login/verify",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login", "verify"]
        }
      }
    },
    {
      "name": "Quizzes: List",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/quizzes",
          "host": ["{{baseUrl}}"],
          "path": ["quizzes"]
        }
      }
    },
    {
      "name": "Quizzes: Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Sample Quiz\",\n  \"topic\": \"General Knowledge\",\n  \"data_json\": [\n    {\n      \"q\": \"What is 2+2?\",\n      \"options\": [\"3\", \"4\", \"5\"],\n      \"answer\": 1\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/quizzes",
          "host": ["{{baseUrl}}"],
          "path": ["quizzes"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "accessToken", "value": "" }
  ]
}
